<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.ashwin.dataanalyticshub.DashboardController">
    <top>
        <HBox style="-fx-background-color: #343333">
            <padding>
                <Insets left="30" top="40" right="42" bottom="30"/>
            </padding>
            <Label text="Dashboard"
                   style="-fx-text-fill: #e2dfdf; -fx-font-size: 35; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS" />
            <MenuButton text="Settings" style="-fx-text-fill: #e2dfdf; -fx-font-size: 15;
            -fx-font-weight: bold; -fx-cursor: hand; -fx-background-color: transparent">
                <items>
                    <MenuItem text="Account Settings" />
                    <MenuItem text="Logout" />
                </items>
            </MenuButton>
        </HBox>
    </top>
    <center>

        <VBox spacing="10" style="-fx-border-color: red">
            <padding>
                <Insets left="30" top="10" right="30" bottom="10"/>
            </padding>
            <HBox>
                <padding>
                    <Insets top="5" bottom="5"/>
                </padding>
                <Label fx:id="userLabel" text="" style="-fx-text-fill: #d01818; -fx-font-size: 40"/>
            </HBox>
            <HBox spacing="10">
                <padding>
                    <Insets top="5" bottom="5"/>
                </padding>
                <Button text="Add Post +" fx:id="addButton" onAction="#handleAddPostPrerequisites"/>
                <Button text="Delete Post -"/>
                <Button text="Retrieve Post"/>
                <Button text="Top N"/>
            </HBox>

            <TableView fx:id="postTableView" prefWidth="1000">
                <columns>
                    <TableColumn text="Post ID" />
                    <TableColumn text="Content" />
                    <TableColumn text="Likes" />
                    <TableColumn text="Shares" />
                    <TableColumn text="Actions">
                        <!-- Define the cell factory for the Actions column -->
                    </TableColumn>
                </columns>
            </TableView>

            <GridPane fx:id="addPostForm" alignment="CENTER" hgap="10" vgap="25" gridLinesVisible="false" style="-fx-border-color: blue">
                <Label text="Add Post" style="-fx-font-size: 14px;" GridPane.rowIndex="0"/>
                <Label text="Post ID" style="-fx-font-size: 14px" GridPane.rowIndex="1"/>
                <TextField fx:id="postIDField" promptText="Post ID" style="-fx-font-size: 14px;"
                           GridPane.columnIndex="0" GridPane.rowIndex="2" />

                <Label text="Content:" style="-fx-font-size: 14px;" GridPane.rowIndex="3" />
                <TextField fx:id="contentField" promptText="Content" style="-fx-font-size: 14px;"
                               GridPane.columnIndex="0"
                               GridPane.rowIndex="4" />

                <Label text="Likes" style="-fx-font-size: 14px;" GridPane.rowIndex="5" />
                <TextField fx:id="likesField" promptText="Content" style="-fx-font-size: 14px;"
                               GridPane.columnIndex="0"
                               GridPane.rowIndex="6" />

                <Label text="Shares" style="-fx-font-size: 14px;" GridPane.rowIndex="7" />
                <TextField fx:id="sharesField" promptText="Content" style="-fx-font-size: 14px;"
                               GridPane.columnIndex="0"
                               GridPane.rowIndex="8" />

                <Label text="Date" style="-fx-font-size: 14px;" GridPane.rowIndex="9" GridPane.columnIndex="0"/>
                <Label text="Hours" style="-fx-font-size: 14px;" GridPane.rowIndex="9" GridPane.columnIndex="1"/>
                <Label text="Minutes" style="-fx-font-size: 14px;" GridPane.rowIndex="9" GridPane.columnIndex="3"/>
                <DatePicker fx:id="dateField" GridPane.rowIndex="10" GridPane.columnIndex="0"/>
                <Spinner fx:id="spinnerHour" GridPane.rowIndex="10" GridPane.columnIndex="1" min="00" max="23" prefWidth="60"/>
                <Label text=":" GridPane.columnIndex="2" GridPane.rowIndex="10"/>
                <Spinner fx:id="spinnerMinutes" GridPane.rowIndex="10" GridPane.columnIndex="3" min="00" max="59" prefWidth="60"/>


                <Button text="Add Post" onAction="#handleAddPost" style="-fx-font-size: 14px;-fx-cursor: hand;"
                        GridPane.rowIndex="11"
                        GridPane.columnIndex="0" prefWidth="200"/>

                <Label fx:id="userMessage" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="12"
                       text=""/>

            </GridPane>


        </VBox>

    </center>

</BorderPane>
